/**
 * Set site colours
 */
$background-white=  #e1e2e1

$large-screen-threshold= 480 px


html, body
  margin: 0
  height:100%
  background-color: $background-white
  font-family: 'PT Sans', Helvetica, Arial, sans-serif

.sidebar, .content
  height: 100vh

.content
  padding: 5%

@media (min-width: $large-screen-threshold)
  allocatePageFraction(amount)
    "calc(100% / 12 * %s)" % amount

  $size-of-sidebar=3

  .sidebar
    position: fixed
    padding: 2%
    width:allocatePageFraction($size-of-sidebar)

  .content
    margin-left: allocatePageFraction($size-of-sidebar)
    width: allocatePageFraction(11 - $size-of-sidebar)
    padding: 5%
    padding-top: 0.5%

.link
  box-shadow: 'none'
  text-decoration: 'none'
  color: 'inherit'
