
/**
 * Set site colours
 */
$sidebar-primary = #263238
$sidebar-secondary=  #e1e2e1
$sidebar-bright = #ffffff

.sidebar-container
  background-color: $sidebar-primary
  color: $sidebar-secondary
  height: 100%;
  text-decoration: none

  .sidebar-main
    padding-left: 1%
    padding-right: 1%
    width: 100%

  .sidebar-description
    color: $sidebar-secondary
    opacity: 0.75
    padding-top: 15%
    padding-bottom: 15%
    padding-left: 10%
    padding-right: 10%

  a
    color: $sidebar-secondary
    font-weight: bold
    text-decoration: none

  .sidebar-toronto
    background-color: $sidebar-secondary
    fill: $sidebar-primary
    transform: scaleX(-1)
    width: 100%

  .sidebar-logo
    fill: $sidebar-secondary
    padding: 5%
    margin-bottom: -15%
    margin-top: -10%