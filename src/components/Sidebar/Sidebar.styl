/**
 * Set site colours
 */
$main-blue = #263238
$accent-white = #e1e2e1
$full-white = #ffffff
$bleed-blue = #66B6D1
$bleed-green = #5bbd76
$bleed-red = #702021
$hover-yellow = #D5A021

$large-screen-threshold = 480px

.sidebar-container
  font-family: 'Bitter', serif
  background-color: $main-blue
  color: $accent-white
  height: 93%;
  text-decoration: none
  line-height: 1.5
  // font-size: 110%

  .sidebar-main
    padding-left: 1%
    padding-right: 10%
    @media (min-width: $large-screen-threshold)
      position: absolute
      bottom: 15%

  .sidebar-avatar
    @media (max-width: $large-screen-threshold)
      display: none
    @media (min-width: $large-screen-threshold)
      display: none

  .sidebar-description
    color: $accent-white
    opacity: 0.75
    font-size: 1.5rem
    font-family: PT Sans, Consolas, Courier New
    padding: 10%
    padding-left: 15%
    padding-right: 5%

  .sidebar-pv-link
    opacity: 1
    font-weight: 600
    color: $accent-white

  .sidebar-toronto
    background-color: $accent-white
    fill: $main-blue
    transform: scaleX(-1)
    width: 100%


  .sidebar-logo-container
    text-align: right
    margin-right: 10%
    margin-left: 10%
    .sidebar-logo
      fill: $accent-white

  .sidebar-page-links
    font-weight: 600
    opacity: 0.80
    font-size: 1.2rem
    color: $full-white

    padding-top: 3%
    padding-bottom: 3%
    padding-left: 15%
    padding-right: 5%

  .sidebar-resume-link
    font-weight: 600
    color: $full-white

  .sidebar-pv-link:hover
  .sidebar-resume-link:hover
  .sidebar-page-links:hover
    font-weight: 600
    color: $hover-yellow
