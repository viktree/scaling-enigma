
/**
 * Set site colours
 */
$sidebar-primary = #263238
$sidebar-secondary=  #DCE0D9
$sidebar-bright = #ffffff
$sidebar-bleed-blue = #0086b3
$sidebar-bleed-green = #5bbd76

.sidebar-container
  font-family: 'Bitter', serif
  background-color: $sidebar-primary
  color: $sidebar-secondary
  height: 93%;
  text-decoration: none

  .sidebar-main
    padding-left: 1%
    padding-right: 1%
    padding-top: 10%
    width: 100%

  .sidebar-description
    color: $sidebar-secondary
    opacity: 0.75
    padding-left: 10%
    padding-right: 10%

  a
    opacity: 1
    color: $sidebar-bright
    font-weight: bold
    text-decoration: none

  .sidebar-uoft-link:hover
    color: $sidebar-bleed-blue
  .sidebar-ecobee:hover
    color: $sidebar-bleed-green

  .sidebar-toronto
    background-color: $sidebar-secondary
    fill: $sidebar-primary
    transform: scaleX(-1)
    width: 100%

  .sidebar-logo-container
    text-align: right
    margin-right: 10%
    margin-left: 10%
    .sidebar-logo
      fill: $sidebar-secondary

  .sidebar-page-links
    padding-top: 2%
    padding-bottom: 2%
    padding-left: 12%
    padding-right: 10%

  .sidebar-page-links:hover
    color: yellow