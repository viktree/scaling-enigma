/**
 * Set site colours
 */
$background-white=#e1e2e1
$large-screen-threshold= 480 px


html, body
  margin: 0
  height:100%
  background-color: $background-white
  font-size: 110%
  font-family: 'PT Sans', Helvetica, Arial, sans-serif

.sidebar, .content
  height: 100vh

.content
  padding: 5%

@media (min-width: $large-screen-threshold)
  allocatePageFraction(amount)
    "calc(100% / 12 * %s)" % amount

  $size-of-sidebar=3

  .sidebar
    position: fixed
    padding: 2%
    font-size: 90%
    width:allocatePageFraction($size-of-sidebar)

  .content
    position: relative
    padding: 2%
    padding-left: 7.5%
    padding-right: 20% 
    height: 80%
    margin-left: allocatePageFraction($size-of-sidebar)

    .bottom-space
      position absolute
      height: 20%
      padding-bottom: 5%

@media (max-width: $large-screen-threshold)
  .sidebar
    padding-top: 5vh
    height: 85vh

  .container
    padding-right: 5%
    padding-left: 5%

.link
  box-shadow: 'none'
  text-decoration: 'none'
  color: 'inherit'
